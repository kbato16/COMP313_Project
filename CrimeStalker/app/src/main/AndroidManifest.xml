<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.comp313_002.crimestalker">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBxjixvbvxkJPLvfKH9JwEhS3m_Trhg4ag" />

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.RegisterUserActivity"
            android:label="@string/app_CreateAccount"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Activities.ReportCrimeActivity"
            android:label="@string/app_ReportCrime"
            android:launchMode="singleTop" />
        <activity android:name=".Activities.ReadCrime" />
        <activity android:name=".Activities.CommentCrimeActivity" />
    </application>

</manifest>