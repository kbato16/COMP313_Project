<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activities.Call911Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:background="@color/color_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="252dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/emergency" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="77dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:text="Call 911"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgbtnPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:onClick="emergencyClick"
            app:srcCompat="@drawable/redphone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="82dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:text="Send Email"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/mgbtnEmail"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:onClick="emergencyClick"
            app:srcCompat="@drawable/email" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="emergencyClick"
            android:text="Back" />
    </LinearLayout>
</LinearLayout>